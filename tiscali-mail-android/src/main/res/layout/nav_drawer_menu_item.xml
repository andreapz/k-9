<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_container"
    android:paddingLeft="@dimen/margin_standard_16dp"
    android:paddingRight="@dimen/margin_standard_16dp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_standard_48dp">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_width="24dp"
        android:layout_height="24dp" />

    <TextView
        android:id="@+id/folder_name"
        style="@style/RobotoMedium14"
        android:textColor="@drawable/nav_drawer_list_item_text_color"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_action"
        style="@style/RobotoMedium14"
        android:textColor="@drawable/nav_drawer_list_item_text_color"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/item_toggle"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>