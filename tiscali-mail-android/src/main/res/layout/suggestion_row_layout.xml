<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_suggestion_row_height"
    style="@style/SearchSuggestionsBackgroundStyle">

    <ImageView
        android:id="@+id/edit_query"
        android:layout_width="@dimen/search_suggestion_row_icon_size"
        android:layout_height="@dimen/search_suggestion_row_icon_size"
        android:scaleType="centerInside"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_history_black_24dp" />

    <TextView
        android:id="@android:id/text1"
        style="@style/searchSuggestionsTextStyle"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/edit_query" />

</RelativeLayout>
