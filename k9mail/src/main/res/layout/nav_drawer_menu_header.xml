<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_standard_8dp"
    android:paddingTop="@dimen/margin_standard_8dp"
    android:paddingLeft="@dimen/margin_standard_16dp"
    android:paddingRight="@dimen/margin_standard_16dp"
    android:layout_marginBottom="@dimen/margin_standard_8dp"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:id="@+id/section_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_standard_8dp"
        android:layout_alignParentTop="true">

        <com.fsck.k9.ui.CapitalizedTextView
            android:id="@+id/section_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            style="@style/RobotoMedium14White"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_settings_white_24dp"
            android:layout_marginBottom="@dimen/margin_standard_8dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_standard_56dp"
        android:id="@+id/account_container"
        android:layout_below="@+id/section_container">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/account_display_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                style="@style/RobotoMedium14White" />

            <TextView
                android:id="@+id/account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                style="@style/RobotoRegular14White" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/expand_menu"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</RelativeLayout>